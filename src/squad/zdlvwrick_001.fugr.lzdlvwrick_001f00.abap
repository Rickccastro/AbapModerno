FORM READ_SINGLE_ZDLVWRICK_001.
  SELECT SINGLE * FROM ZDLRICK_004 WHERE
ID = ZDLVWRICK_001-ID .
ZDLVWRICK_001-MANDT =
ZDLRICK_004-MANDT .
ZDLVWRICK_001-ID =
ZDLRICK_004-ID .
ZDLVWRICK_001-DESCRICAO =
ZDLRICK_004-DESCRICAO .
ENDFORM.
