FORM GET_DATA_ZDLVWRICK_001.
  PERFORM VIM_FILL_WHERETAB.
*.read data from database.............................................*
  REFRESH TOTAL.
  CLEAR   TOTAL.
  SELECT * FROM ZDLRICK_004 WHERE
(VIM_WHERETAB) .
    CLEAR ZDLVWRICK_001 .
ZDLVWRICK_001-MANDT =
ZDLRICK_004-MANDT .
ZDLVWRICK_001-ID =
ZDLRICK_004-ID .
ZDLVWRICK_001-DESCRICAO =
ZDLRICK_004-DESCRICAO .
<VIM_TOTAL_STRUC> = ZDLVWRICK_001.
    APPEND TOTAL.
  ENDSELECT.
  SORT TOTAL BY <VIM_XTOTAL_KEY>.
  <STATUS>-ALR_SORTED = 'R'.
*.check dynamic selectoptions (not in DDIC)...........................*
  IF X_HEADER-SELECTION NE SPACE.
    PERFORM CHECK_DYNAMIC_SELECT_OPTIONS.
  ELSEIF X_HEADER-DELMDTFLAG NE SPACE.
    PERFORM BUILD_MAINKEY_TAB.
  ENDIF.
  REFRESH EXTRACT.
ENDFORM.
*---------------------------------------------------------------------*
FORM DB_UPD_ZDLVWRICK_001 .
*.process data base updates/inserts/deletes.........................*
LOOP AT TOTAL.
  CHECK <ACTION> NE ORIGINAL.
MOVE <VIM_TOTAL_STRUC> TO ZDLVWRICK_001.
  IF <ACTION> = UPDATE_GELOESCHT.
    <ACTION> = GELOESCHT.
  ENDIF.
  CASE <ACTION>.
   WHEN NEUER_GELOESCHT.
IF STATUS_ZDLVWRICK_001-ST_DELETE EQ GELOESCHT.
     READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
     IF SY-SUBRC EQ 0.
       DELETE EXTRACT INDEX SY-TABIX.
     ENDIF.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN GELOESCHT.
  SELECT SINGLE FOR UPDATE * FROM ZDLRICK_004 WHERE
  ID = ZDLVWRICK_001-ID .
    IF SY-SUBRC = 0.
    DELETE ZDLRICK_004 .
    ENDIF.
    IF STATUS-DELETE EQ GELOESCHT.
      READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY> BINARY SEARCH.
      DELETE EXTRACT INDEX SY-TABIX.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN OTHERS.
  SELECT SINGLE FOR UPDATE * FROM ZDLRICK_004 WHERE
  ID = ZDLVWRICK_001-ID .
    IF SY-SUBRC <> 0.   "insert preprocessing: init WA
      CLEAR ZDLRICK_004.
    ENDIF.
ZDLRICK_004-MANDT =
ZDLVWRICK_001-MANDT .
ZDLRICK_004-ID =
ZDLVWRICK_001-ID .
ZDLRICK_004-DESCRICAO =
ZDLVWRICK_001-DESCRICAO .
    IF SY-SUBRC = 0.
    UPDATE ZDLRICK_004 ##WARN_OK.
    ELSE.
    INSERT ZDLRICK_004 .
    ENDIF.
    READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
    IF SY-SUBRC EQ 0.
      <XACT> = ORIGINAL.
      MODIFY EXTRACT INDEX SY-TABIX.
    ENDIF.
    <ACTION> = ORIGINAL.
    MODIFY TOTAL.
  ENDCASE.
ENDLOOP.
CLEAR: STATUS_ZDLVWRICK_001-UPD_FLAG,
STATUS_ZDLVWRICK_001-UPD_CHECKD.
MESSAGE S018(SV).
ENDFORM.
